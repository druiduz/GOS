      mc:Ignorable="d" 
      d:DesignHeight="819" d:DesignWidth="1107"
	Title="HomePage" Background="#FFF2F2F2">

    <Grid Background="#FFF2F2F2" AllowDrop="False" HorizontalAlignment="Center" VerticalAlignment="Center">
