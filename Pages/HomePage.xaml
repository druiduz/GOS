        </Grid.OpacityMask>
        <Button Content="Gestion carte magnetique" Height="56" HorizontalAlignment="Left" Margin="149,285,0,0" Name="btnCarte" VerticalAlignment="Top" Width="177" Click="btnCarte_Click" Background="#FFFFF70D" TabIndex="1" />
        <Button Content="Rapport vente" Height="56" HorizontalAlignment="Left" Margin="656,359,0,0" Name="btnRapport" VerticalAlignment="Top" Width="177" Click="btnRapport_Click" TabIndex="5" Background="#FFFFF70D" />
        <Button Content="Vente" Height="56" HorizontalAlignment="Left" Margin="149,359,0,0" Name="btnVente" VerticalAlignment="Top" Width="177" Click="btnVente_Click" Background="#FFFFF70D" TabIndex="2" />
        <Button Content="Gestion Stock" Height="56" HorizontalAlignment="Left" Margin="656,285,0,0" Name="btnStock" VerticalAlignment="Top" Width="177" Background="#FFFFF70D" Click="btnStock_Click" TabIndex="4" />
        <Button Content="Clients" Height="55" HorizontalAlignment="Left" Margin="400,321,0,0" Name="btnClients" VerticalAlignment="Top" Width="177" Click="btnClients_Click" Background="#FFFFF70D" TabIndex="3" />
